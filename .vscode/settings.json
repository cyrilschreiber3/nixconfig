{
	"nix.enableLanguageServer": true,
	"nix.serverPath": "nil",
	"nix.formatterPath": "nixpkgs-fmt",
	"nix.serverSettings": {
		"nil": {
			"formatting": {
				"command": ["nixpkgs-fmt"]
			}
		}
	},
	"multiCommand.commands": [
		{
			"command": "multiCommand.nixosRebuildSwitch",
			"interval": 500,
			"sequence": [
				"workbench.action.createTerminalEditorSide",
				{
					"command": "workbench.action.terminal.sendSequence",
					"args": { "text": "ssh cyril@localhost clear && rebuild\n" }
				}
			]
		}
	]
}
